{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title (appears in browser tab) #}
{% block title %}Login - Rick and Morty Portal{% endblock %}

{# Add custom CSS for the login page #}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="login-container">
        <div class="login-header">
            <img src="{{ asset('images/portal.png') }}" class="logo" alt="Rick & Morty Portal">
            <h1> Rick & Morty Portal</h1>
            <p class="subtitle">Please log in to continue</p>
        </div>

        {# Display login errors if they exist #}
        {% if error %}
            <div class="alert alert-error">
                <span class="alert-icon">‚ùå</span>
                <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}
        
        {# Login form - submits to the same route (app_login) #}
        <form method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <div class="input-wrapper">
                    <input 
                        type="text" 
                        id="username" 
                        name="_username" 
                        value="{{ last_username }}" 
                        placeholder="Enter your username"
                        required 
                        autocomplete="username"
                    >
                    <i class="fas fa-user input-icon"></i>
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-wrapper">
                    <input 
                        type="password" 
                        id="password" 
                        name="_password" 
                        placeholder="Enter your password"
                        required 
                        autocomplete="current-password"
                    >
                    <i class="fas fa-lock input-icon"></i>
                    <button type="button" class="password-toggle" onclick="togglePassword()">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
            </div>
            
            {# CSRF token for security #}
            <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">
            
            <button type="submit" class="btn">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </button>
        </form>

        <div class="signup-link">
            <p>Don't have an account yet?</p>
            <a href="{{ path('app_register') }}">
                <i class="fas fa-user-plus"></i>
                Create your account
            </a>
        </div>
    </div>
{% endblock %}

{# Add JavaScript for password toggle functionality #}
{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
{% endblock %}