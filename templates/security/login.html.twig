{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title (appears in browser tab) #}
{% block title %}Login - Rick and Morty Portal{% endblock %}

{# Add custom CSS for the login page #}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/tailwind.css') }}" rel="stylesheet">
{% endblock %}

{# Main page content #}
{% block body %}
<div class="font-sans bg-gradient-to-br from-rick-green to-portal-blue flex justify-center items-center min-h-screen p-5 fixed inset-0 overflow-auto">
    <div class="bg-white p-10 rounded-2xl shadow-xl w-full max-w-md">
        <div class="text-center mb-8">
            <img src="{{ asset('images/portal.png') }}" class="w-32 h-32 mb-3 block mx-auto" alt="Rick & Morty Portal">
            <h1 class="text-gray-800 text-center mb-5 text-3xl font-bold"> Rick & Morty Portal</h1>
            <p class="text-center text-gray-600 mb-8 text-base">Please log in to continue</p>
        </div>

        {# Display login errors if they exist #}
        {% if error %}
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-5 rounded-lg flex items-center">
                <span class="mr-3 text-lg">❌</span>
                <span class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="{% if type == 'error' %}bg-red-50 border-l-4 border-red-500 text-red-700{% else %}bg-green-50 border-l-4 border-green-500 text-green-700{% endif %} p-4 mb-5 rounded-lg flex items-center">
                    <span class="mr-3 text-lg">
                        {% if type == 'error' %}❌{% else %}✅{% endif %}
                    </span>
                    <span class="font-medium">{{ message }}</span>
                </div>
            {% endfor %}
        {% endfor %}
        
        {# Login form - submits to the same route (app_login) #}
        {# Uses manual html unlike registration which uses symfony form widgets #}
        <form method="post">
            <div class="mb-5 relative">
                <label for="username" class="block mb-2 text-gray-600 font-bold text-sm">Username</label>
                <div class="relative">
                    <input 
                        type="text" 
                        id="username" 
                        name="_username" 
                        value="{{ last_username }}" 
                        placeholder="Enter your username"
                        required 
                        autocomplete="username"
                        class="w-full pl-12 pr-4 py-4 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 bg-gray-50 focus:outline-none focus:border-blue-500 focus:bg-white focus:shadow-lg"
                    >
                    <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 z-10 pointer-events-none"></i>
                </div>
            </div>

            <div class="mb-5 relative">
                <label for="password" class="block mb-2 text-gray-600 font-bold text-sm">Password</label>
                <div class="relative">
                    <input 
                        type="password" 
                        id="password" 
                        name="_password" 
                        placeholder="Enter your password"
                        required 
                        autocomplete="current-password"
                        class="w-full pl-12 pr-12 py-4 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 bg-gray-50 focus:outline-none focus:border-blue-500 focus:bg-white focus:shadow-lg"
                    >
                    <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 z-10 pointer-events-none"></i>
                    <button type="button" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-blue-500 transition-colors duration-300 p-1 rounded z-10" onclick="togglePassword()">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
            </div>
            
            {# CSRF token for security #}
            <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">
            
            <button type="submit" class="w-full py-4 bg-gradient-to-br from-rick-green to-portal-blue text-white border-0 rounded-lg text-base font-semibold cursor-pointer transition-all duration-300 relative overflow-hidden hover:-translate-y-1 hover:shadow-lg active:translate-y-0">
                <i class="fas fa-sign-in-alt mr-2"></i>
                Sign In
            </button>
        </form>

        <div class="text-center mt-6 pt-6 border-t border-gray-300">
            <p class="text-gray-600 mb-3">Don't have an account yet?</p>
            <a href="{{ path('app_register') }}" class="text-blue-500 no-underline font-semibold inline-flex items-center transition-colors duration-300 hover:text-purple-600">
                <i class="fas fa-user-plus mr-2"></i>
                Create your account
            </a>
        </div>
    </div>
</div>
{% endblock %}

{# Add JavaScript for password toggle functionality #}
{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
{% endblock %}