{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title #}
{% block title %}{{ character.name }} - Rick & Morty Portal{% endblock %}

{# Add custom CSS for the character detail page #}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #66eaa1 0%, #1778df 100%);
            margin: 0;
            padding: 20px 0;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }
        
        .back-button {
            display: inline-flex;
            align-items: center;
            color: white;
            text-decoration: none;
            background: rgba(255,255,255,0.1);
            padding: 10px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            transition: background-color 0.3s;
        }
        
        .back-button:hover {
            background: rgba(255,255,255,0.2);
            color: white;
            text-decoration: none;
        }
        
        .back-button i {
            margin-right: 8px;
        }
        
        .character-detail {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 0;
        }
        
        .character-image-section {
            background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }
        
        .character-image {
            width: 220px;
            height: 220px;
            border-radius: 50%;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            object-fit: cover;
        }
        
        .character-info {
            padding: 40px;
        }
        
        .character-name {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }
        
        .character-status {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            font-size: 1.2rem;
        }
        
        .status-indicator {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            margin-right: 10px;
        }
        
        .status-alive { background-color: #55cc44; }
        .status-dead { background-color: #d63d2e; }
        .status-unknown { background-color: #9e9e9e; }
        
        .character-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .detail-item {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        
        .detail-label {
            font-weight: bold;
            color: #666;
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 5px;
        }
        
        .detail-value {
            color: #333;
            font-size: 1.1rem;
        }
        
        .episodes-section {
            margin-top: 30px;
        }
        
        .section-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        
        .section-title i {
            margin-right: 10px;
            color: #667eea;
        }
        
        .episodes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
        }
        
        .episode-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #55cc44;
            transition: transform 0.2s ease;
        }
        
        .episode-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .episode-name {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }
        
        .episode-info {
            color: #666;
            font-size: 0.9rem;
        }
        
        .favorite-button {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            margin-top: 20px;
        }
        
        .favorite-button:hover {
            background: linear-gradient(45deg, #ff5252, #ff7979);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255,107,107,0.4);
            color: white;
            text-decoration: none;
        }
        
        .favorite-button i {
            margin-right: 8px;
        }
        
        .navigation-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        
        .nav-button {
            display: inline-flex;
            align-items: center;
            padding: 12px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .nav-button.primary {
            background: #667eea;
            color: white;
        }
        
        .nav-button.primary:hover {
            background: #5a6fd8;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }
        
        .nav-button i {
            margin-right: 8px;
        }
        
        @media (max-width: 768px) {
            .character-detail {
                grid-template-columns: 1fr;
            }
            
            .character-image-section {
                padding: 30px;
            }
            
            .character-image {
                width: 180px;
                height: 180px;
            }
            
            .character-details {
                grid-template-columns: 1fr;
            }
            
            .episodes-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="container">
        {# Back to characters button #}
        <a href="{{ path('app_character_list') }}" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Back to Characters
        </a>

        {# Flash messages for user feedback #}
        {% for message in app.flashes('success') %}
            <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center; border: 1px solid #c3e6cb;">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div style="background: #f8d7da; color: #721c24; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center; border: 1px solid #f5c6cb;">
                <i class="fas fa-exclamation-triangle"></i> {{ message }}
            </div>
        {% endfor %}

        {# Character detail card #}
        <div class="character-detail">
            {# Character image section #}
            <div class="character-image-section">
                <img src="{{ character.image }}" alt="{{ character.name }}" class="character-image">
            </div>

            {# Character information section #}
            <div class="character-info">
                <h1 class="character-name">{{ character.name }}</h1>
                
                <div class="character-status">
                    <span class="status-indicator status-{{ character.status|lower }}"></span>
                    {{ character.status }} - {{ character.species }}
                </div>

                {# Character details grid #}
                <div class="character-details">
                    <div class="detail-item">
                        <div class="detail-label">Gender</div>
                        <div class="detail-value">{{ character.gender }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Species</div>
                        <div class="detail-value">{{ character.species }}</div>
                    </div>
                    
                    {% if character.type %}
                    <div class="detail-item">
                        <div class="detail-label">Type</div>
                        <div class="detail-value">{{ character.type }}</div>
                    </div>
                    {% endif %}
                    
                    <div class="detail-item">
                        <div class="detail-label">Status</div>
                        <div class="detail-value">{{ character.status }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Origin</div>
                        <div class="detail-value">{{ character.origin.name }}</div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-label">Last Location</div>
                        <div class="detail-value">{{ character.location.name }}</div>
                    </div>
                </div>

                {# Favorites functionality with proper forms #}
                {% if isFavorite %}
                    {# Remove from favorites form #}
                    <form method="post" action="{{ path('app_character_remove_favorite', {id: character.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('remove_favorite' ~ character.id) }}">
                        <button type="submit" class="favorite-button" style="background: linear-gradient(45deg, #74b9ff, #0984e3);">
                            <i class="fas fa-heart-broken"></i>
                            Remove from Favorites
                        </button>
                    </form>
                {% else %}
                    {# Add to favorites form #}
                    <form method="post" action="{{ path('app_character_add_favorite', {id: character.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('add_favorite' ~ character.id) }}">
                        <button type="submit" class="favorite-button">
                            <i class="fas fa-heart"></i>
                            Add to Favorites
                        </button>
                    </form>
                {% endif %}

                {# Navigation buttons #}
                <div class="navigation-buttons">
                    <a href="{{ path('app_character_list') }}" class="nav-button primary">
                        <i class="fas fa-users"></i>
                        All Characters
                    </a>
                </div>
            </div>
        </div>

        {# Episodes section #}
        {% if character.episode is defined and character.episode is not empty %}
        <div class="episodes-section">
            <h2 class="section-title">
                <i class="fas fa-tv"></i>
                Episodes ({{ character.episode|length }})
            </h2>
            
            <div class="episodes-grid">
                {% for episode_url in character.episode|slice(0, 12) %}
                    {% set episode_id = episode_url|split('/')|last %}
                    <div class="episode-card">
                        <div class="episode-name">Episode {{ episode_id }}</div>
                        <div class="episode-info">Season {{ (episode_id / 11)|round(0, 'ceil') }}</div>
                    </div>
                {% endfor %}
                
                {% if character.episode|length > 12 %}
                    <div class="episode-card">
                        <div class="episode-name">+ {{ character.episode|length - 12 }} more episodes</div>
                        <div class="episode-info">View character list for complete info</div>
                    </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}