{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title #}
{% block title %}{{ character.name }} - Rick & Morty Portal{% endblock %}

{# Add Font Awesome and minimal custom styles for gradients #}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Only custom gradients and effects that Tailwind can't handle */
        .rick-morty-bg {
            background: linear-gradient(135deg, #66eaa1 0%, #1778df 100%);
        }
        
        .character-image-gradient {
            background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
        }
        
        .favorite-gradient {
            background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
        }
        
        .favorite-gradient:hover {
            background: linear-gradient(45deg, #ff5252, #ff7979);
        }
        
        .remove-favorite-gradient {
            background: linear-gradient(45deg, #74b9ff, #0984e3);
        }
        
        .status-alive { background-color: #55cc44; }
        .status-dead { background-color: #d63d2e; }
        .status-unknown { background-color: #9e9e9e; }
        
        .detail-border {
            border-left: 4px solid #667eea;
        }
        
        .episode-border {
            border-left: 4px solid #667eea;
        }
    </style>
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="rick-morty-bg min-h-screen py-5 fixed inset-0 overflow-auto">
        <div class="max-w-4xl mx-auto px-5">
            {# Back to characters button #}
            <a href="{{ path('app_character_list') }}" 
               class="inline-flex items-center text-white no-underline bg-white bg-opacity-10 px-5 py-2.5 rounded-lg mb-5 transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Characters
            </a>

            {# Flash messages for user feedback #}
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 text-green-800 p-4 rounded-lg mb-5 text-center border border-green-200">
                    <i class="fas fa-check-circle mr-2"></i>{{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-5 text-center border border-red-200">
                    <i class="fas fa-exclamation-triangle mr-2"></i>{{ message }}
                </div>
            {% endfor %}

            {# Character detail card #}
            <div class="bg-white rounded-3xl overflow-hidden shadow-2xl grid grid-cols-1 lg:grid-cols-[300px_1fr] gap-0">
                {# Character image section #}
                <div class="character-image-gradient flex items-center justify-center p-10">
                    <img src="{{ character.image }}" 
                         alt="{{ character.name }}" 
                         class="w-56 h-56 rounded-full border-4 border-white shadow-xl object-cover">
                </div>

                {# Character information section #}
                <div class="p-10">
                    <h1 class="text-4xl font-bold mb-2.5 text-gray-800">{{ character.name }}</h1>
                    
                    <div class="flex items-center mb-8 text-xl">
                        <span class="w-4 h-4 rounded-full mr-2.5 status-{{ character.status|lower }}"></span>
                        <span class="text-gray-700">{{ character.status }} - {{ character.species }}</span>
                    </div>

                    {# Character details grid #}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 mb-8">
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Gender</div>
                            <div class="text-gray-800 text-lg">{{ character.gender }}</div>
                        </div>
                        
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Species</div>
                            <div class="text-gray-800 text-lg">{{ character.species }}</div>
                        </div>
                        
                        {% if character.type %}
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Type</div>
                            <div class="text-gray-800 text-lg">{{ character.type }}</div>
                        </div>
                        {% endif %}
                        
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Status</div>
                            <div class="text-gray-800 text-lg">{{ character.status }}</div>
                        </div>
                        
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Origin</div>
                            <div class="text-gray-800 text-lg">{{ character.origin.name }}</div>
                        </div>
                        
                        <div class="bg-gray-50 p-4 rounded-lg detail-border">
                            <div class="font-bold text-gray-600 text-sm uppercase mb-1">Last Location</div>
                            <div class="text-gray-800 text-lg">{{ character.location.name }}</div>
                        </div>
                    </div>

                    {# Favorites functionality with proper forms #}
                    {% if isFavorite %}
                        {# Remove from favorites form #}
                        <form method="post" action="{{ path('app_character_remove_favorite', {id: character.id}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('remove_favorite' ~ character.id) }}">
                            <button type="submit" 
                                    class="remove-favorite-gradient inline-flex items-center text-white px-6 py-3 border-0 rounded-3xl text-base font-semibold cursor-pointer transition-all duration-300 no-underline mt-5 hover:-translate-y-0.5 hover:shadow-lg">
                                <i class="fas fa-heart-broken mr-2"></i>
                                Remove from Favorites
                            </button>
                        </form>
                    {% else %}
                        {# Add to favorites form #}
                        <form method="post" action="{{ path('app_character_add_favorite', {id: character.id}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_favorite' ~ character.id) }}">
                            <button type="submit" 
                                    class="favorite-gradient inline-flex items-center text-white px-6 py-3 border-0 rounded-3xl text-base font-semibold cursor-pointer transition-all duration-300 no-underline mt-5 hover:-translate-y-0.5 hover:shadow-lg">
                                <i class="fas fa-heart mr-2"></i>
                                Add to Favorites
                            </button>
                        </form>
                    {% endif %}

                    {# Navigation buttons #}
                    <div class="flex gap-4 mt-8">
                        <a href="{{ path('app_character_list') }}" 
                           class="inline-flex items-center px-5 py-3 bg-indigo-500 text-white no-underline rounded-lg font-semibold transition-all duration-300 hover:bg-indigo-600 hover:-translate-y-0.5">
                            <i class="fas fa-users mr-2"></i>
                            All Characters
                        </a>
                    </div>
                </div>
            </div>

            {# Episodes section #}
            {% if character.episode is defined and character.episode is not empty %}
            <div class="mt-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-tv mr-2.5 text-indigo-500"></i>
                    Episodes ({{ character.episode|length }})
                </h2>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                    {% for episode_url in character.episode %}
                        {% set episode_id = episode_url|split('/')|last %}
                        <div class="bg-gray-50 p-4 rounded-lg episode-border transition-transform duration-200 hover:-translate-y-0.5 hover:shadow-md">
                            <div class="font-bold text-gray-800 mb-1">Episode {{ episode_id }}</div>
                            <div class="text-gray-600 text-sm">Season {{ (episode_id / 11)|round(0, 'ceil') }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}