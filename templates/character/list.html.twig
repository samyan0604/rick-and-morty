{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title #}
{% block title %}Rick & Morty Characters{% endblock %}

{# Add Font Awesome and minimal custom styles for gradients #}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Only custom gradients and effects that Tailwind can't handle */
        .rick-morty-bg {
            background: linear-gradient(135deg, #66eaa1 0%, #1778df 100%);
        }
        
        .status-alive { background-color: #55cc44; }
        .status-dead { background-color: #d63d2e; }
        .status-unknown { background-color: #9e9e9e; }
        
        .nav-blur {
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }
    </style>
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="rick-morty-bg min-h-screen py-5 fixed inset-0 overflow-auto">
        <div class="max-w-6xl mx-auto px-5">
            {# Header #}
            <div class="text-center text-white mb-10">
                <h1 class="text-5xl mb-2.5 font-bold" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                    ðŸ›¸ Rick & Morty Characters
                </h1>
                <p class="text-xl opacity-90">Explore the multiverse of characters from the hit TV series</p>
            </div>

            {# Navigation #}
            <div class="nav-blur bg-white bg-opacity-10 rounded-lg p-4 mb-8 flex justify-between items-center">
                <div class="flex items-center">
                    <a href="{{ path('app_character_list') }}" 
                       class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                        <i class="fas fa-users mr-2"></i>All Characters
                    </a>
                    {% if app.user %}
                        <a href="{{ path('app_user_favorites') }}" 
                           class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                            <i class="fas fa-heart mr-2"></i>My Favorites
                        </a>
                    {% endif %}
                </div>
                <div class="flex items-center">
                    {% if app.user %}
                        <span class="text-white mr-4">Welcome, {{ app.user.username }}!</span>
                        <a href="{{ path('app_logout') }}" 
                           class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                            <i class="fas fa-sign-out-alt mr-2"></i>Logout
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" 
                           class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                            <i class="fas fa-sign-in-alt mr-2"></i>Login
                        </a>
                        <a href="{{ path('app_register') }}" 
                           class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                            <i class="fas fa-user-plus mr-2"></i>Register
                        </a>
                    {% endif %}
                </div>
            </div>

            {# Error message if API failed #}
            {% if error %}
                <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-5 text-center">
                    <i class="fas fa-exclamation-triangle mr-2"></i>{{ error }}
                </div>
            {% endif %}

            {# Characters grid #}
            {% if characters is not empty %}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 mb-10">
                    {% for character in characters %}
                        <div class="bg-white rounded-2xl overflow-hidden shadow-lg transition-all duration-300 ease-in-out cursor-pointer hover:-translate-y-1 hover:shadow-2xl" 
                             onclick="window.location.href='{{ path('app_character_show', {id: character.id}) }}'">
                            <img src="{{ character.image }}" 
                                 alt="{{ character.name }}" 
                                 class="w-full h-48 object-cover">
                            <div class="p-5">
                                <div class="text-xl font-bold mb-2 text-gray-800">{{ character.name }}</div>
                                <div class="flex items-center mb-1">
                                    <span class="w-2.5 h-2.5 rounded-full mr-2 status-{{ character.status|lower }}"></span>
                                    <span class="text-gray-700">{{ character.status }}</span>
                                </div>
                                <div class="text-gray-600 text-sm">{{ character.species }}</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {# Pagination #}
                <div class="flex justify-center items-center gap-4 mt-10">
                    {% if hasPrevious %}
                        <a href="{{ path('app_character_list', {page: currentPage - 1}) }}" 
                           class="px-5 py-3 bg-white text-gray-800 no-underline rounded-lg shadow-md transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg">
                            <i class="fas fa-chevron-left mr-2"></i>Previous
                        </a>
                    {% else %}
                        <span class="px-5 py-3 bg-white text-gray-800 rounded-lg shadow-md opacity-50 cursor-not-allowed">
                            <i class="fas fa-chevron-left mr-2"></i>Previous
                        </span>
                    {% endif %}

                    <span class="px-5 py-3 bg-blue-600 text-white rounded-lg shadow-md">
                        Page {{ currentPage }} of {{ totalPages }}
                    </span>

                    {% if hasNext %}
                        <a href="{{ path('app_character_list', {page: currentPage + 1}) }}" 
                           class="px-5 py-3 bg-white text-gray-800 no-underline rounded-lg shadow-md transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg">
                            Next<i class="fas fa-chevron-right ml-2"></i>
                        </a>
                    {% else %}
                        <span class="px-5 py-3 bg-white text-gray-800 rounded-lg shadow-md opacity-50 cursor-not-allowed">
                            Next<i class="fas fa-chevron-right ml-2"></i>
                        </span>
                    {% endif %}
                </div>

                {# Character count #}
                <div class="text-center text-white mt-5">
                    Showing {{ characters|length }} of {{ totalCount }} characters
                </div>

            {% else %}
                {# Empty state #}
                <div class="text-center text-white my-16">
                    <i class="fas fa-robot text-6xl mb-5 opacity-70"></i>
                    <h2 class="text-2xl mb-2 font-bold">No characters found</h2>
                    <p class="text-lg">Unable to load characters at the moment. Please try again later.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}