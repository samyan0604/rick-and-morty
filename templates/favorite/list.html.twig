{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title #}
{% block title %}My Favorites - Rick & Morty Portal{% endblock %}

{# Add Font Awesome and minimal custom styles for gradients #}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Only custom gradients and effects that Tailwind can't handle */
        .rick-morty-bg {
            background: linear-gradient(135deg, #66eaa1 0%, #1778df 100%);
        }
        
        .nav-blur {
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }
        
        .btn-primary-gradient {
            background: linear-gradient(45deg, #667eea, #764ba2);
        }
        
        .btn-danger-gradient {
            background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
        }
        
        .btn-danger-gradient:hover {
            background: linear-gradient(45deg, #ff5252, #ff7979);
        }
    </style>
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="rick-morty-bg min-h-screen py-5">
        <div class="max-w-6xl mx-auto px-5">
            {# Header #}
            <div class="text-center text-white mb-10">
                <h1 class="text-5xl mb-2.5 font-bold" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                    ❤️ My Favorite Characters
                </h1>
                <p class="text-xl opacity-90">Your personal collection of Rick & Morty characters</p>
            </div>

            {# Navigation #}
            <div class="nav-blur bg-white bg-opacity-10 rounded-lg p-4 mb-8 flex flex-col md:flex-row justify-between items-center gap-4 md:gap-0">
                <div class="flex items-center">
                    <a href="{{ path('app_character_list') }}" 
                       class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                        <i class="fas fa-users mr-2"></i>All Characters
                    </a>
                    <a href="{{ path('app_user_favorites') }}" 
                       class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 bg-white bg-opacity-30 font-bold">
                        <i class="fas fa-heart mr-2"></i>My Favorites
                    </a>
                </div>
                <div class="flex items-center">
                    <span class="text-white mr-4">Welcome, {{ app.user.username }}!</span>
                    <a href="{{ path('app_logout') }}" 
                       class="text-white no-underline mx-4 px-4 py-2 rounded transition-all duration-300 hover:bg-white hover:bg-opacity-20">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>

            {# Flash messages #}
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 text-green-800 p-4 rounded-lg mb-5 text-center border border-green-200">
                    <i class="fas fa-check-circle mr-2"></i>{{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-5 text-center border border-red-200">
                    <i class="fas fa-exclamation-triangle mr-2"></i>{{ message }}
                </div>
            {% endfor %}

            {# Favorites statistics #}
            {% if favorites is not empty %}
                <div class="nav-blur bg-white bg-opacity-10 rounded-lg p-5 mb-8 text-center text-white">
                    <div class="text-4xl font-bold mb-1">{{ favorites|length }}</div>
                    <div class="text-lg opacity-90">
                        {% if favorites|length == 1 %}
                            Favorite Character
                        {% else %}
                            Favorite Characters
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {# Favorites grid or empty state #}
            {% if favorites is not empty %}
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5 mb-10">
                    {% for favorite in favorites %}
                        <div class="bg-white rounded-2xl overflow-hidden shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:shadow-2xl relative">
                            <img src="{{ favorite.characterImage }}" 
                                 alt="{{ favorite.characterName }}" 
                                 class="w-full h-48 object-cover">
                            <div class="p-5">
                                <div class="text-xl font-bold mb-4 text-gray-800">{{ favorite.characterName }}</div>
                                <div class="flex gap-2.5 mt-4">
                                    <a href="{{ path('app_character_show', {id: favorite.characterId}) }}" 
                                       class="btn-primary-gradient flex-1 px-4 py-2 text-white text-sm rounded-xl font-semibold transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg text-center no-underline inline-flex items-center justify-center">
                                        <i class="fas fa-eye mr-1"></i>View Details
                                    </a>
                                    <form method="post" action="{{ path('app_favorite_remove', {id: favorite.characterId}) }}" class="inline flex-1">
                                        <input type="hidden" name="_token" value="{{ csrf_token('remove_favorite' ~ favorite.characterId) }}">
                                        <button type="submit" 
                                                class="btn-danger-gradient w-full px-4 py-2 text-white text-sm font-semibold rounded-xl border-0 cursor-pointer transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg inline-flex items-center justify-center"
                                                onclick="return confirm('Remove {{ favorite.characterName }} from favorites?')">
                                            <i class="fas fa-trash mr-1"></i>Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {# Empty state when no favorites #}
                <div class="text-center text-white my-16">
                    <i class="fas fa-heart-broken text-6xl mb-5 opacity-70"></i>
                    <h2 class="text-3xl mb-4 font-bold">No Favorites Yet</h2>
                    <p class="text-lg mb-8 opacity-90">Start building your collection by adding characters to your favorites!</p>
                    <a href="{{ path('app_character_list') }}" 
                       class="inline-flex items-center bg-white bg-opacity-20 text-white px-6 py-3 text-lg no-underline rounded-lg transition-all duration-300 hover:bg-white hover:bg-opacity-30">
                        <i class="fas fa-plus mr-2"></i>Browse Characters
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}