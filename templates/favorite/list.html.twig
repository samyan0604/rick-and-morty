{# Extend the base template #}
{% extends 'base.html.twig' %}

{# Set the page title #}
{% block title %}My Favorites - Rick & Morty Portal{% endblock %}

{# Add custom CSS for the favorites page #}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #66eaa1 0%, #1778df 100%);
            margin: 0;
            padding: 20px 0;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }
        
        .header h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .nav-bar {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        
        .nav-links a:hover {
            background-color: rgba(255,255,255,0.2);
        }
        
        .nav-links a.active {
            background-color: rgba(255,255,255,0.3);
            font-weight: bold;
        }
        
        .favorites-stats {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
            color: white;
        }
        
        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .stats-label {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .characters-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .character-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }
        
        .character-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }
        
        .character-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        
        .character-info {
            padding: 20px;
        }
        
        .character-name {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }
        
        .character-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .btn i {
            margin-right: 5px;
        }
        
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }
        
        .btn-danger {
            background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
            color: white;
        }
        
        .btn-danger:hover {
            background: linear-gradient(45deg, #ff5252, #ff7979);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
        }
        
        .empty-state {
            text-align: center;
            color: white;
            margin: 60px 0;
        }
        
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.7;
        }
        
        .empty-state h2 {
            font-size: 2rem;
            margin-bottom: 15px;
        }
        
        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 30px;
            opacity: 0.9;
        }
        
        .empty-state .btn {
            background: rgba(255,255,255,0.2);
            color: white;
            padding: 12px 24px;
            font-size: 1.1rem;
        }
        
        .empty-state .btn:hover {
            background: rgba(255,255,255,0.3);
            color: white;
            text-decoration: none;
        }
        
        .flash-message {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .flash-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .flash-error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        @media (min-width: 1024px) {
            .characters-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        
        @media (min-width: 768px) and (max-width: 1023px) {
            .characters-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        
        @media (max-width: 767px) {
            .characters-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            .nav-bar {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
{% endblock %}

{# Main page content #}
{% block body %}
    <div class="container">
        {# Header #}
        <div class="header">
            <h1>❤️ My Favorite Characters</h1>
            <p>Your personal collection of Rick & Morty characters</p>
        </div>

        {# Navigation #}
        <div class="nav-bar">
            <div class="nav-links">
                <a href="{{ path('app_character_list') }}">
                    <i class="fas fa-users"></i> All Characters
                </a>
                <a href="{{ path('app_user_favorites') }}" class="active">
                    <i class="fas fa-heart"></i> My Favorites
                </a>
            </div>
            <div class="nav-links">
                <span style="color: white;">Welcome, {{ app.user.username }}!</span>
                <a href="{{ path('app_logout') }}">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>

        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="flash-message flash-success">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="flash-message flash-error">
                <i class="fas fa-exclamation-triangle"></i> {{ message }}
            </div>
        {% endfor %}

        {# Favorites statistics #}
        {% if favorites is not empty %}
            <div class="favorites-stats">
                <div class="stats-number">{{ favorites|length }}</div>
                <div class="stats-label">
                    {% if favorites|length == 1 %}
                        Favorite Character
                    {% else %}
                        Favorite Characters
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# Favorites grid or empty state #}
        {% if favorites is not empty %}
            <div class="characters-grid">
                {% for favorite in favorites %}
                    <div class="character-card">
                        <img src="{{ favorite.characterImage }}" alt="{{ favorite.characterName }}" class="character-image">
                        <div class="character-info">
                            <div class="character-name">{{ favorite.characterName }}</div>
                            <div class="character-actions">
                                <a href="{{ path('app_character_show', {id: favorite.characterId}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <form method="post" action="{{ path('app_favorite_remove', {id: favorite.characterId}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_favorite' ~ favorite.characterId) }}">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Remove {{ favorite.characterName }} from favorites?')">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {# Empty state when no favorites #}
            <div class="empty-state">
                <i class="fas fa-heart-broken"></i>
                <h2>No Favorites Yet</h2>
                <p>Start building your collection by adding characters to your favorites!</p>
                <a href="{{ path('app_character_list') }}" class="btn">
                    <i class="fas fa-plus"></i> Browse Characters
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}